#include <stdio.h>
int main() 
{
   int arreglo[100], i, num = 2;
  
   // Llenar arreglo con primeros 100 pares
   for (i = 0; i < 100; i++)
{
       arreglo[i] = num;
       num += 2;
   }
  
   // Imprimir arreglo
   printf("Los 100 primeros nÃºmeros pares:\n");
   for (i = 0; i < 100; i++)
{
       printf("%d ", arreglo[i]);
   }
   printf("\n");
  
   return 0;
}

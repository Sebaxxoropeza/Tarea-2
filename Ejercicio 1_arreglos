#include <stdio.h>
int main() 
{
   int n, i, suma = 0;
  
   // Leer tamaño del arreglo
   printf("Ingresa el tamaño del arreglo: ");
   scanf("%d", &n);
  
   int arreglo[n];  // Arreglo de tamaño n
  
   // Leer elementos del arreglo
   printf("Ingresa los %d elementos:\n", n);
   for (i = 0; i < n; i++)
{
       scanf("%d", &arreglo[i]);
   }
  
     // Calcular suma
     for (i = 0; i < n; i++)
   {
       suma += arreglo[i];
 }
  
   // Imprimir suma
   printf("Suma de los elementos: %d\n", suma);
  
   return 0;
}

#include <stdio.h>
int main() 
{
   int n, cont_pos = 0, cont_neg = 0, cont_nul = 0, i;
  
   // Leer tamaño del arreglo
   printf("Ingresa el tamaño del arreglo: ");
   scanf("%d", &n);
  
   int arreglo[n];
  
   // Leer elementos del arreglo
   printf("Ingresa los %d elementos:\n", n);
   for (i = 0; i < n; i++) {
       scanf("%d", &arreglo[i]);
   }
  
   // Contar positivos, negativos y nulos
   for (i = 0; i < n; i++)
{
       if (arreglo[i] > 0) 
  {
           cont_pos++;
   } else if (arreglo[i] < 0) 
    {
           cont_neg++;
    } else 
     {
           cont_nul++;
      }
  }
  
   // Imprimir conteos
   printf("Positivos: %d\n", cont_pos);
   printf("Negativos: %d\n", cont_neg);
   printf("Nulos: %d\n", cont_nul);
  
   return 0;
}
